@model WareHouseNJsound.Models.Employee
@{
    ViewData["Title"] = "เปลี่ยนรหัสผ่าน";
}

<h3>เปลี่ยนรหัสผ่าน</h3>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<form asp-action="ChangePassword" method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input type="text" class="form-control" value="@Model.Username" disabled />
    </div>
    <div class="mb-3">
        <label>รหัสผ่านปัจจุบัน</label>
        <input type="password" name="currentPassword" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>รหัสผ่านใหม่</label>
        <input type="password" name="newPassword" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>ยืนยันรหัสผ่านใหม่</label>
        <input type="password" name="confirmPassword" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">ยืนยันการเปลี่ยนรหัสผ่าน</button>
</form>
