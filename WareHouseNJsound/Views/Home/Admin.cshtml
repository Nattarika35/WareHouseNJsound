@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<WareHouseNJsound.Models.Employee>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Domine:wght@598&family=Noto+Sans+Thai:wght@100..900&display=swap" rel="stylesheet" />
</head>

<body>
<div class="container mt-3">
        <h1 style="font-family: 'Noto Sans Thai', sans-serif;">ข้อมูลสมาชิกในระบบ</h1>
        <h3 style="font-family: 'Noto Sans Thai', sans-serif;">Admin</h3>

        <div class="mb-3 d-flex justify-content-between align-items-center" style="margin-bottom: 20px;">
            <a asp-controller="" asp-action="" class="btn btn-success" style="font-family: 'Noto Sans Thai', sans-serif;">
                <i class="bx bx-plus"></i> เพิ่ม Admin
            </a>

            <div>
                <input type="text" id="searchInput" class="form-control" placeholder="Search..." style="width: 300px;" />
            </div>
        </div>

    <table id="employeeTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Picture</th>
                <th>username & password</th>
                <th>ข้อมูลส่วนตัว</th>
                <th>ที่อยู่อาศัย</th>
                <th>สถานะ</th>
                <th>จัดการ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Employee_ID</td>
                    <td>
                        @if (item.Picture != null && item.Picture.Length > 0)
                        {
                            var base64 = Convert.ToBase64String(item.Picture);
                            var imgSrc = $"data:image/jpeg;base64,{base64}";
                            <img src="@(imgSrc)" alt="@item.Employee_ID" style="max-width:80px; max-height:60px;" />
                        }
                        else
                        {
                            <span>ไม่มีรูป</span>
                        }
                    </td>
                    <td>
                        @item.Username <br />
                            <a href="@Url.Action("ChangePassword", "Home")"
                               class="btn btn-outline-warning mt-2">
                                เปลี่ยนรหัสผ่าน
                            </a>
                    </td>
                    <td>
                        ชื่อ: @item.FullName <br />
                        เบอร์โทร: @item.Emp_Tel
                    </td>
                    <td>
                        @item.Address <br />
                        Email: @item.Email
                    </td>
                    <td>
                        @if (item.Role_ID == 201)
                        {
                            <span class="badge bg-success">Admin</span>
                        }
                        else if (item.Role_ID == 202)
                        {
                            <span class="badge bg-info">Member</span>
                        }
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>
</html>
