@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background-color: #f6a965;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background-color: #fcd2a2;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 450px;
            text-align: center;
        }

        .login-icon {
            font-size: 80px;
            color: #823f10;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 30px;
            padding-left: 45px;
        }

        .input-group-text {
            background-color: transparent;
            border: none;
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #823f10;
        }

        .form-check-label, .forgot-link {
            color: #823f10;
            font-size: 0.85rem;
        }

        .login-btn {
            background-color: #823f10;
            color: white;
            border: none;
            border-radius: 30px;
            padding: 10px 40px;
            font-size: 1.2rem;
            margin-top: 20px;
        }

        .position-relative .form-control {
            padding-left: 45px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- เริ่มต้นฟอร์ม -->
        <form method="post" action="/Login/Index">

            <!-- Login Icon -->
            <div class="login-icon">
                <i class="bi bi-people-fill"></i>
            </div>

            <!-- Username Input -->
            <div class="mb-3 position-relative">
                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                <input type="text" name="username" class="form-control" placeholder="Username" required>
            </div>

            <!-- Password Input -->
            <div class="mb-3 position-relative">
                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>

            <!-- ปุ่ม Login -->
            <button type="submit" class="login-btn mt-3">Login</button>
        </form>
        <!-- จบฟอร์ม -->
    </div>

    <!-- SweetAlert เมื่อ Login ผิดพลาด -->
    @if (ViewBag.Error != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'เข้าสู่ระบบไม่สำเร็จ',
                text: 'Username หรือ Password ของคุณไม่ถูกต้อง',
                confirmButtonText: 'ตกลง'
            });
        </script>
    }

</body>
</html>
